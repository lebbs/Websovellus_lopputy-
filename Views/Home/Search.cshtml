@model SensorSelectViewModel
@{
    ViewData["Title"] = "Search";
}

<h2>Valitse sensori ja päivä</h2>

<form asp-action="SearchData" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-2" for="Key">Päivämäärä</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" name="From" type="date" value="@Model.SearchModel.From?.ToString("yyyy-MM-dd")" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="Key" data-valmsg-replace="true"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" for="Key">Sensori</label>
                    @if (null != Model?.Sensors && Model.Sensors.Count > 0)
                    {
                        <div class="col-md-10">
                            <select name="Sensors">
                                @foreach (var item in Model.Sensors)
                                {
                                    <option value="@item.Tag">@item.Name</option>
                                }
                            </select>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-10">
                            Sensoreita ei löytynyt!
                        </div>
                    }
                </div>

                <input type="submit" class="btn btn-default" value="Hae mittaukset" />
            </div>
        </div>
    </div>
</form>


